@{
    ViewData["Title"] = "A Book A Day";
}

@model IQueryable<Book>

<header>
    <!--Header with bootstrap-->
    <h1 class="text-primary text-center">A Book A Day</h1>
</header>
<br />
<div>
    <!--Bootstrap to create a table-->
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <!--Sets the table column names-->
            <tr><th>Title</th><th>Author</th><th>Publisher</th><th>ISBN</th><th>Classifaction/Category</th><th>Price</th></tr>
        </thead>

        <!--Loops through the list of books and puts it in a table-->
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Title</td>
                <td>@x.Author</td>
                <td>@x.Publisher</td>
                <td>@x.ISBN</td>
                <td>@x.Category</td>
                <td>@("$" + x.Price)</td>
            </tr>
            }
        </tbody>
    </table>
</div>
